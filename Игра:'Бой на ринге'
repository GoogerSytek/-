from random import randint
print ('Добро пожаловать в наш любимый мордобой!!   Вы начинаете бой,ваши действия?')
print ('Доступные опции:''\n''УДАР''\n''ЗАЩИТА''\n''ПЕРЕГРУППИРОВКА')

end="L"


hpIam=100#Здоровье персонажа
ЗащПозЯ=0#Уровень эффективности защитной позиции моего героя
СилУдрЯ=1#Уровень силы удара моего персонажа
УрАдреналинЯ=0#Вероятность критических ударов моего персонажа
КонценЯ=0#Вероятность использовать Способность #Способность:2-3 удара в одном
ВерУклЯ=0 #Вероятность Игрока уклониться от атаки Врага
hp01=100 #Здоровье врага 1
maxhp01=100#Максимальное здоровье врага
СилУдрВр=1#Сила удара врага
ЗащПозВр=0#Уровень защитной позиции врага
УрАдреналинВр=0#Уровень Адреналина врага
КонценЯВр=0#Уровень концентрации врага
ВерУклВр=0#Вероятность Врага уклониться от Моей атаки
Daff=0#Номер хода
while hp01>0 and hpIam>0:
  Daff+=1 
  print('Ход:',Daff)
