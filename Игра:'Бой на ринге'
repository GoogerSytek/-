  elif одинходя=='Защита':
         ЗащПозЯ+=50#повышение защитных навыков
         УрАдреналинЯ-=10# уменьшение вероятности критического удара
         ВерУклЯ+=1
         print("Вы стали в удобную позицию и приготовились встречать врага"'\n')
         
         #Перегруппировка
  else:
         КонценЯ+=15
         ЗащПозЯ+=20
         УрАдреналинЯ-=5
         print('\n''Вы сконцентрировались на своей победе и на уязвимые точки противника. ' '\n')
  print("Здоровье противника:",hp01,'\n''Мое здоровье:',hpIam,'\n''Моя Защита:',ЗащПозЯ,'\n''Сила Моего удара:',СилУдрЯ,'\n''Моя КонцентрациЯ:',КонценЯ,'\n''Уровень Моего Адреналина:',УрАдреналинЯ,'\n''Мой Урон:',УронМой,'\n''Вероятность уклониться:',ВерУклЯ)
  print('Ход врага:Нажмите чтобы продолжить''\n')
  q=input('\n''ХОД противника...''\n')
  ХоВр=randint(1,3)
  if ХоВр==1:
   
   print('Противник нападает!!')
   СилУдрВр+=1
   ass=randint(1,100)
   if ass>51:
    endam=randint(15,35)
   else:
    endam=randint(5,15)    
   БаффЗащ=ЗащПозЯ*0.05  
   endam-=БаффЗащ 
   
   
   acid=(endam+(5*СилУдрВр) )  
   asa= (randint (1,10))
   
   if asa==1:
             print ('Враг атаковал вас в живот"''\n')
   if asa==2:
             print ('Противник атаковал вас в ногу''\n')
   if asa ==3:
             print ('Противник рывком набросился на Вас!''\n')
   if asa==4:
             print('Противник бросил вас  \n')
   if asa ==5:
             print ('Противник ударил вас в грудь''\n')
   if asa ==6:
             print('Враг атаковал вас в живот''\n')
   if КонценЯВр>14:
             d=randint (1,11)  
             if d>7:
                 acid*=1.3
                 print('КРИТИЧЕСКИЙ УДАР! (Ур1) Уязвимое место')
                 if КонценЯВр>28:
                      d=randint (1,11)  
                      if d>3:
                         acid*=1.6
                         print('КРИТИЧЕСКИЙ УДАР! (Ур2) Вывихнутая нога')               
                      if КонценЯВр>40:
                         d=randint (1,11)  
                         if d>2:
                           acid*=2.5
                           print('КРИТИЧЕСКИЙ УДАР! (Ур3) Перелом руки')                              
   if ВерУклЯ>1:
             dadge=randint(1,100) 
             if dadge>80:
                endam=0
                print('\n''Вы уклонились от удара(1)''\n')
   if ВерУклВр>5:
             dadge=randint(1,100) 
             if dadge>60:
                УронМой=0
                print('\n''Вы уклонились от удара(2)''\n')
   if ВерУклВр>10:
             dadge=randint(1,100) 
             if dadge>40:
                УронМой=0
                print('\n''Вы уклонились от удара(3)''\n')
   if ВерУклВр>15:
             dadge=randint(1,100) 
             if dadge>20:
                УронМой=0
                print('\n''Вы уклонились от удара(4)''\n') 
   hpIam=hpIam-acid                                   
  if ХоВр==2:
      print('Враг уходит в оборону и ожидает...') 
      ЗащПозВр+=20
      УрАдреналинВр-=5
      КонценЯВр+=5
      endam=0
      ВерУклВр+=1
      
  if ХоВр==3:
      print('Враг концентрируется \n на ваши слабые стороны...') 
      ЗащПозВр+=10
      КонценЯВр+=15      
      endam =0
      
  print ('Урон врага:',endam,'\n''Здоровье врага:',hp01,'\n''Защита Врага:',ЗащПозВр,'\n''Концентрация Врага:',КонценЯВр,'\n','Сила удара врага:',СилУдрВр,'\n''Вероятность Врага уклониться:',ВерУклВр)

  if hp01<=0:
            print('Противник упал на ринге и больше не двигался...','\n','Вы победили!!')
  if hpIam<=0:
            print('Вы упали, не в силах сделать и вздоха... Вы проиграли!!!')    
  if hp01<=0 and hpIam<=0:
      print('Вы оба упали на ринге замертво...\nЧерез 3 секунды судья объявил ничью') 
  if УронМой>  maxhp01*0.5:
      print('В порыве гнева Вы раздавили череп противника своей яростью.\n Игра окончена.\n Вы победили!!!\n FATALITY!!!')
      break
      ###Чит-Коды:
  if Daff==17:
      print('Секретное слово: -П-а-л-ь-м-а-')
